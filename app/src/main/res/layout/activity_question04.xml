    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:onClick="Chamar02"
