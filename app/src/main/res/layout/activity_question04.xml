        app:backgroundTint="#0B0B0B" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:onClick="Chamar01"
        android:text="C - O prefeito. / Tentar convencer o prefeito que havia pagado o imposto, mas tivesse esquecido o recibo em casa"
        app:backgroundTint="#070707" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="CreateByRaquelAlves" />
